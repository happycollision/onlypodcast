<h1>Listing episodes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Number</th>
    <th>Date</th>
    <th>Show notes</th>
    <th>File location</th>
    <th>File size</th>
    <th>Duration</th>
    <th>Art location</th>
    <th>Description</th>
    <th>Keywords</th>
    <th>Podcast</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @episodes.each do |episode| %>
  <tr>
    <td><%= episode.title %></td>
    <td><%= episode.number %></td>
    <td><%= episode.date %></td>
    <td><%= episode.show_notes %></td>
    <td><%= episode.file_location %></td>
    <td><%= episode.file_size %></td>
    <td><%= episode.duration %></td>
    <td><%= episode.art_location %></td>
    <td><%= episode.description %></td>
    <td><%= episode.keywords %></td>
    <td><%= episode.podcast_id %></td>
    <td><%= link_to 'Show', episode %></td>
    <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
    <td><%= link_to 'Destroy', episode, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

