<h1>Listing podcasts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Slug</th>
    <th>Url</th>
    <th>Description</th>
    <th>Keywords</th>
    <th>Explicit</th>
    <th>Category</th>
    <th>Subcategories</th>
    <th>Author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @podcasts.each do |podcast| %>
  <tr>
    <td><%= podcast.title %></td>
    <td><%= podcast.slug %></td>
    <td><%= podcast.url %></td>
    <td><%= podcast.description %></td>
    <td><%= podcast.keywords %></td>
    <td><%= podcast.explicit %></td>
    <td><%= podcast.category %></td>
    <td><%= podcast.subcategories %></td>
    <td><%= podcast.author %></td>
    <td><%= link_to 'Show', podcast %></td>
    <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
    <td><%= link_to 'Destroy', podcast, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

